@model User

<h2>Crear nuevo usuario</h2>
<form asp-action="Edit" asp-controller="Users" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label for="">Nombres</label>
        <input asp-for="Names" class="form-control" value="@Model.Names">
    </div>
    <div class="form-group">
        <label for="">Apellidos</label>
        <input asp-for="LastNames" class="form-control"  value="@Model.LastNames">
    </div>
    <div class="form-group">
        <label for="">Correo</label>
        <input asp-for="Email" class="form-control" value="@Model.Email">
    </div>
    <button class="btn btn-primary" type="submit">Actualizar</button>
</form>
